{
  "_comment": "https://github.com/QuiltMC/rfcs/blob/main/specification/0002-quilt.mod.json.md",
  "schema_version": 1,
  "mixin": [
    "examplemod.mixins.json",
    "examplemod-common.mixins.json"
  ],
  "quilt_loader": {
    "metadata": {
      "name": "${mod_name}",
      "description": "${description}",
      "license": "${license}",
      "authors": ["FlashHUN"],
      "contact": {
        "sources": "https://github.com/architectury/architectury-templates"
      }
    },
    "group": "${group}",
    "id": "${mod_id}",
    "version": "${version}",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": [
        {
          "adapter": "kotlin",
          "value": "net.examplemod.quilt.ExampleModQuilt"
        }
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=${minecraft_version}"
      },
      {
        "id": "architectury",
        "version": ">=${architectury_version}"
      }
    ]
  },
  "minecraft": {
    "environment": "*"
  }
}